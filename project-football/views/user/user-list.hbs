        <hr>
        {{#each users}}
        <div class="col-4 mt-5">
            <div class="card" style="width: 18rem;">
                <img src="{{avatar}}" class="card-img-top" alt="{{username}}">
                <div class="card-body">
                    <h3 class="card-title">{{username}}</h3>
                    <h5>{{email}}</h5>
