        <h1 class="mt-5 mb-3">Detalle de {{username}}</h1>
        <hr>
        <div class="col-5">
            <figure>
                <img src="{{avatar}}" alt="{{username}}">
            </figure>
        </div>
        <div class="col-7">
            <div class="mb-3">
                <h5>Nombre de Usuario:</h5>
                <h3>{{username}}</h3>
            </div>
            <div class="mb-3">
                <h5>Email</h5>
                <h3>{{email}}</h3>
            </div>
            <div class="mb-3">
                <h5>Descripci√≥n</h5>
                <p>{{description}}</p>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <a href="/user/{{_id}}/edit" class="btn btn-warning ">Editar</a>
                </div>
