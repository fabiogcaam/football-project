<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="avatar">
                <img src="{{user.avatar}}" alt="avatar" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-6">
                    <label>Username</label>
                </div>
                <div class="col-md-6">
                    <p>{{user.username}}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Email</label>
                </div>
                <div class="col-md-6">
                    <p>{{user.email}}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Avatar</label>
                </div>
                <div class="col-md-6">
                    <p>{{user.avatar}}</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Descripcion</label>
                </div>
                <div class="col-md-6">
                    <p>{{user.description}}</p>
                </div>
            </div>

            {{#if isAdminOrOwner}}
            <div class="row">
                <div class="col-md-6">
                    <a href="/user/{{user._id}}/edit" class="btn btn-warning btn-sm">Editar</a>
                </div>
                {{!-- {{#if isAdmin}}
                <div class="col-md-6">
                    <form action="/{{user._id}}" method="post">
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm">
                    </form>
                </div>
                {{/if}} --}}
            </div>
            {{/if}}
        </div>
    </div>
</div>